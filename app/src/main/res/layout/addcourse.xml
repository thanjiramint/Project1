<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".Project1" tools:ignore="MergeRootFrame" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course code:"
        android:id="@+id/textView5"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/code"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView7"
        android:hint="Course code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit :"
        android:id="@+id/textView7"
        android:layout_below="@+id/code"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/credit"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:hint="Credit" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/finish"
        android:onClick="addClicked"
        android:longClickable="false"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/date2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difficulty :"
        android:id="@+id/difficulty"
        android:layout_alignStart="@+id/diff"
        android:layout_below="@+id/credit" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diff"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/credit"
        android:layout_alignStart="@+id/credit">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:id="@+id/easy"
            android:layout_below="@+id/difficulty"
            android:layout_alignStart="@+id/difficulty"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average"
            android:id="@+id/med"
            android:checked="false"
            android:layout_below="@+id/easy"
            android:layout_alignStart="@+id/easy" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard"
            android:id="@+id/hard"
            android:checked="false"
            android:layout_below="@+id/med"
            android:layout_alignStart="@+id/med" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date1"
        android:id="@+id/datetxt"
        android:layout_below="@+id/diff"
        android:layout_alignStart="@+id/diff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time1"
        android:id="@+id/textView8"
        android:layout_marginStart="17dp"
        android:layout_above="@+id/time1"
        android:layout_toEndOf="@+id/date1" />

    <EditText
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:id="@+id/time1"
        android:layout_alignStart="@+id/textView8"
        android:hint="0.00"
        android:layout_below="@+id/datetxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date2"
        android:id="@+id/textView32"
        android:layout_above="@+id/date2"
        android:layout_alignStart="@+id/datetxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date2"
        android:layout_below="@+id/textView33"
        android:layout_alignStart="@+id/textView32"
        android:hint="Mon,Tue,Wed,Thurs,Fri,Sat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time2"
        android:id="@+id/textView33"
        android:layout_below="@+id/time1"
        android:layout_alignStart="@+id/time2" />

    <EditText
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:id="@+id/time2"
        android:layout_below="@+id/textView33"
        android:layout_alignStart="@+id/time1"
        android:hint="0.00" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course name :"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:hint="Course name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date1"
        android:hint="Mon,Tue,Wed,Thurs,Fri,Sat"
        android:layout_below="@+id/datetxt"
        android:layout_alignStart="@+id/datetxt" />

</RelativeLayout>
