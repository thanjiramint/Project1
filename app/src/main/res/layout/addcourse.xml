<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".Project1" tools:ignore="MergeRootFrame" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course code:"
        android:id="@+id/textView5"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course code"
        android:id="@+id/code"
        android:layout_marginLeft="63dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit :"
        android:id="@+id/textView7"
        android:layout_below="@+id/code"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Credit"
        android:id="@+id/credit"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/finish"
        android:layout_marginBottom="21dp"
        android:onClick="addClicked"
        android:longClickable="false"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/time2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book name:"
        android:id="@+id/textView6"
        android:layout_below="@+id/credit"
        android:layout_alignStart="@+id/credit" />

    <EditText
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:text="book"
        android:id="@+id/book"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difficulty :"
        android:id="@+id/difficulty"
        android:layout_below="@+id/book"
        android:layout_alignStart="@+id/diff" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diff"
        android:layout_below="@+id/book"
        android:layout_alignStart="@+id/book"
        android:layout_marginTop="13dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:id="@+id/easy"
            android:layout_below="@+id/difficulty"
            android:layout_alignStart="@+id/difficulty"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average"
            android:id="@+id/med"
            android:checked="false"
            android:layout_below="@+id/easy"
            android:layout_alignStart="@+id/easy" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard"
            android:id="@+id/hard"
            android:checked="false"
            android:layout_below="@+id/med"
            android:layout_alignStart="@+id/med" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date1"
        android:id="@+id/datetxt"
        android:layout_below="@+id/diff"
        android:layout_alignStart="@+id/diff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon,Tue,Wed,Thurs,Fri,Sat"
        android:id="@+id/date1"
        android:layout_below="@+id/datetxt"
        android:layout_alignStart="@+id/datetxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time1"
        android:id="@+id/textView8"
        android:layout_above="@+id/time1"
        android:layout_alignEnd="@+id/book" />

    <EditText
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:id="@+id/time1"
        android:layout_alignTop="@+id/date1"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date2"
        android:id="@+id/textView32"
        android:layout_above="@+id/date2"
        android:layout_alignStart="@+id/date1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon,Tue,Wed,Thurs,Fri,Sat"
        android:id="@+id/date2"
        android:layout_below="@+id/textView33"
        android:layout_alignStart="@+id/textView32" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time2"
        android:id="@+id/textView33"
        android:layout_below="@+id/time1"
        android:layout_alignStart="@+id/time2" />

    <EditText
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:id="@+id/time2"
        android:layout_below="@+id/textView33"
        android:layout_alignStart="@+id/time1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course name :"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course name"
        android:id="@+id/name"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
